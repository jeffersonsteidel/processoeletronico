<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping 
	PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="br.com.progepe.entity.Servidor" table="SERVIDOR">
		<id name="codigo" column="SERV_COD">
			<generator class="increment"></generator>
		</id>
		<property name="nome" column="SERV_NOME" />
		<property name="siape" column="SERV_SIAPE" />
		<property name="dataAdmissao" column="SERV_DATA_ADM_CARGO" />
		<property name="dataAdmServicoPublico" column="SERV_DATA_ADM_SERV_PUB" />
		<property name="identificacaoUnica" column="SERV_ID_UNICA" />
		<property name="dataSaida" column="SERV_DATA_SAIDA" />
		<property name="ramal" column="SERV_RAMAL" />
		<property name="sexo" column="SERV_SEXO" />
		<property name="email" column="SERV_EMAIL" />
		<property name="dataNascimento" column="SERV_DATA_NASC" />
		<property name="nomePai" column="SERV_NOME_PAI" />
		<property name="nomeMae" column="SERV_NOME_MAE" />
		<property name="indEstrangeiro" column="SERV_IND_ESTRAN"
			type="boolean" />
		<property name="telefone" column="SERV_TEL_FIXO" />
		<property name="celular" column="SERV_TEL_CEL" />
		<one-to-one name="cargo" class="br.com.progepe.entity.Cargo"
			constrained="true" />
		<one-to-one name="lotacao" class="br.com.progepe.entity.Lotacao"
			constrained="true" />
		<one-to-one name="localExercicio" class="br.com.progepe.entity.Lotacao"
			constrained="true" />
		<one-to-one name="documento" class="br.com.progepe.entity.Documento"
			constrained="true" cascade="all" />
		<one-to-one name="padrao" class="br.com.progepe.entity.Padrao"
			constrained="true" />
		<one-to-one name="contaBancaria" class="br.com.progepe.entity.ContaBancaria"
			constrained="true" cascade="all" />
		<one-to-one name="grupoSanguineo" class="br.com.progepe.entity.GrupoSanguineo"
			constrained="true" />
		<one-to-one name="cidadeNascimento" class="br.com.progepe.entity.Cidade"
			constrained="true" />
		<one-to-one name="estadoCivil" class="br.com.progepe.entity.EstadoCivil"
			constrained="true" />
		<one-to-one name="corPele" class="br.com.progepe.entity.CorPele"
			constrained="true" />
		<one-to-one name="funcao" class="br.com.progepe.entity.Funcao"
			constrained="true" />
		<one-to-one name="regimeTrabalho" class="br.com.progepe.entity.RegimeTrabalho"
			constrained="true" />
		<one-to-one name="situacaoFuncional" class="br.com.progepe.entity.SituacaoFuncional"
			constrained="true" />
		<one-to-one name="grupo" class="br.com.progepe.entity.Grupo"
			constrained="true" />
		<one-to-one name="endereco" class="br.com.progepe.entity.Endereco"
			constrained="true" />
		<one-to-one name="conjuge" class="br.com.progepe.entity.Conjuge"
			cascade="all" constrained="true" />
		<set name="dependentes" table="SERVIDORDEPENDENTE">
			<key column="SERV_COD" />
			<one-to-many class="br.com.progepe.entity.Dependente" />
		</set>
		<set name="titulacoes" table="SERVIDORTITULACAO">
			<key column="SERV_TIT_COD" />
			<one-to-many class="br.com.progepe.entity.ServidorTitulacao" />
		</set>
	</class>
</hibernate-mapping>