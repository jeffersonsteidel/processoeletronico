create table dependente (dep_cod integer not null primary key auto_increment,
                         dep_nome varchar(100) not null,
                         dep_dt_nasc date not null,
                         dep_gr_paren_cod integer not null  references grauparentesco(grau_par_cod),
                         dep_ind_univer bit,
                         dep_ind_ir bit,
                         dep_ind_pde bit);

create table conjugue (conj_cod integer not null  primary key auto_increment,
                         conj_nome varchar(100) not null,
                         conj_cpf varchar(14) not null,
                         conj_dt_nasc date not null,
                         conj_nacional varchar(40) not null,
                         conj_cid_cod integer not null references cidade(cid_cod),
                         conj_rg varchar(11) not null,
                         conj_org_emis varchar(10) not null,
                         conj_est_cod_emis integer not null references estado(est_cod),
                         conj_dt_emis date not null
                        );

create table corpele( cor_pele_cod integer not null  primary key auto_increment,
                      cor_pele_desc varchar(60) not null
                    );

