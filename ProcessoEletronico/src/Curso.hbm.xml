<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping 
	PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="br.com.progepe.entity.Curso" table="CURSO">
		<id name="codigo" column="CUR_COD">
			<generator class="increment"></generator>  
		</id>
		<property name="descricao" column="CUR_DESC" />
		<many-to-one name="lotacao" class="br.com.progepe.entity.Lotacao"
			column="LOT_COD" lazy="false" />
	</class>
</hibernate-mapping>