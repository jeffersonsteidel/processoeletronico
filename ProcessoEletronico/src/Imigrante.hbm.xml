<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping 
	PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="br.com.progepe.entity.Imigrante" table="IMIGRANTE">
		<id name="codigo" column="IMIG_COD">
			<generator class="increment"></generator>
		</id>
		<property name="dataChegadaPais" column="IMIG_DATA_CHEG" />
		<one-to-one name="servidor" class="br.com.progepe.entity.Servidor"
			constrained="true" cascade="all" />
		<one-to-one name="conjuge" class="br.com.progepe.entity.Conjuge"
			constrained="true" cascade="all" />
		<one-to-one name="pais" class="br.com.progepe.entity.Pais"
			constrained="true" cascade="all" />
	</class>
</hibernate-mapping>